<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="размер шрифта заголовка"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/gr0_radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="маленький" />

                <RadioButton
                    android:id="@+id/gr0_radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="средний" />

                <RadioButton
                    android:id="@+id/gr0_radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="большой" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="размер шрифта новости"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RadioGroup
                android:id="@+id/RadioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/gr1_radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="маленький" />

                <RadioButton
                    android:id="@+id/gr1_radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="средний" />

                <RadioButton
                    android:id="@+id/gr1_radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="большой" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="размер шрифта списка каналов"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RadioGroup
                android:id="@+id/RadioGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/gr2_radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="маленький" />

                <RadioButton
                    android:id="@+id/gr2_radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="средний" />

                <RadioButton
                    android:id="@+id/gr2_radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="большой" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="очистить историю"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="всю" />

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="одну" />

        </LinearLayout>
</ScrollView>
