<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rssreader"
    android:versionCode="2"
    android:versionName="2.1" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-sdk android:minSdkVersion="8"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        
        <activity
            android:name="com.example.rssreader.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.rssreader.ListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity 
            android:name="rssfeed.AndroidRSSReader" 
            android:label="@string/app_name">
        </activity>
        <activity 
            android:name="rssfeed.RssItemDisplayer" 
            android:label="@string/app_name">
            <intent-filter>
				<action android:name="com.example.rssreader.displayRssItem" />
				<category android:name="android.intent.category.DEFAULT"></category>
			</intent-filter>
        </activity>
        <activity android:name="menu.main" android:label="@string/app_name"></activity>
    	
    </application>

</manifest>
